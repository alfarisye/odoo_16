<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <record id="inherit_hr_maintenance_request_view_form" model="ir.ui.view">
        <field name="name">inherit_hr_maintenance_request_view_form</field>
        <field name="model">maintenance.request</field>
        <!-- Please veryfiy, that the following inherited view really sticks to the naming convention. -->
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form" />
        <!-- <field name="type">tree</field>
        <field name="mode">primary|extension</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" /> -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='equipment_id']" position="after">
                <field widget="radio" name="work_order_type"/>
            </xpath>
            <xpath expr="//field[@name='priority']" position="after">
                <field name="site_id"/>
                <field name='demage_id'/>
                <field name='cause_id'/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>