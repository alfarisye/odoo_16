<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hit_condition_monitoring_view_model_tree" model="ir.ui.view">
            <field name="name">hit.condition.monitoring.view.model.tree</field>
            <field name="model">hit.condition.monitoring</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="condition_monitoring_tree" create="true" delete="true" edit="true">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="hit_condition_monitoring_view_model_form" model="ir.ui.view">
            <field name="name">hit.condition.monitoring.view.model.form</field>
            <field name="model">hit.condition.monitoring</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="condition_monitoring_form" create="true" delete="true" edit="true">
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name"
                                string="Name" placeholder="Request Register Unit" />
                            </h1>
                        </div>
                        <br/>
                        <group>
                            <group>
                                    <field name="unit_id"></field>
                                    <field name="brand_id" />
                                    <field name="category_iid" />
                                    <field name="class_mainten_id" />
                                    <field name="model_mainten_id" />
                                    <field name="description" />
                            </group>
                            <group>
                                <field name="site_id" />
                            </group>
                    </group>
                    <notebook>
                        <page string="General Information" >
                            <group>
                                <group>
                                    <field name="machine_code_id" />
                                    <field name="machine_type_id" />
                                    <field name="machine_category_id" />
                                    <field name="machine_group_id" />
                                </group>
                                <group>
                                    <field name="serial_number_id" />
                                    <field name="manufacturing_year" />
                                    <field name="age_id"/>
                                    <field name="target_id"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <label for="width"/>
                                    <div class="o_row">
                                        <field name="width" /> cm
                                    </div>
                                    <label for="length"/>
                                    <div class="o_row">
                                        <field name="length" /> cm
                                    </div>
                                    <label for="height"/>
                                    <div class="o_row">
                                        <field name="height" /> cm
                                    </div>
                                    <label for="weight"/>
                                    <div class="o_row">
                                        <field name="weight" /> ton
                                    </div>
                                </group>
                                <group>
                                    <label for="hourmater"/>
                                    <div class="o_row">
                                        <field name="hourmater" /> 
                                    </div>
                                    <label for="kilomater"/>
                                    <div class="o_row">
                                        <field name="kilomater" /> 
                                    </div>
                                    <label for="accumulative_hourmeter"/>
                                    <div class="o_row">
                                        <field name="accumulative_hourmeter" /> 
                                    </div>
                                    <label for="accumulative_kilomater"/>
                                    <div class="o_row">
                                        <field name="accumulative_kilomater" /> 
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string='Maintenance History'>
                            <field name="equipment_master_list_ids" readonly="1">
                                <tree>
                                    <field name="work_order_type"/>
                                    <field name="maintenance_type"/>
                                    <field name="description"/>
                                    <field name="site_id"/>
                                    <field name="demage_id"/>
                                    <field name="cause_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string='Transfer Information'>
                            <field name="transfer_unit_ids" readonly="1">
                                <tree>
                                    <field name="site_id"/>
                                    <field name="effective_date" widget='daterange'/>
                                </tree>
                            </field>
                        </page>
                        <page string='Parent Information'>
                            <group>
                                <field name="parent_id"/>
                                <field name="category_text"/>
                                <field name="brand_text"/>
                                <field name="model_text"/>
                                <field name="class_text"/>
                                <field name="name_text"/>
                            </group>
                        </page>
                        <page string='Tire Information'>
                            <field name="tire_information_ids" readonly="1">
                                <tree>
                                    <field name="tire_s_n"/>
                                    <field name="position"/>
                                </tree>
                            </field>
                        </page>
                        <page string='Warranty'>
                            <group>
                                <field name="warranty_type"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="hourmater_ids"/>
                                <field name="Kilometer_ids"/>
                            </group>
                        </page>
                        <page string='Component Position'>
                            <field name="attachment_id"></field>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hit_condition_monitoring_view_model_search" model="ir.ui.view">
            <field name="name">hit.condition.monitoring.view.model.search</field>
            <field name="model">hit.condition.monitoring</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="condition_monitoring_search">
                    <field name="brand_id" />
                </search>
            </field>
        </record>
        <record id="action_hit_condition_monitoring_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Equipment Master List</field>
            <field name="res_model">hit.condition.monitoring</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- <record id="hit_condition_monitoring_menu_equipment" model="ir.ui.menu" >
            <field name="name">Condition Monitoring</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_hit_condition_monitoring_act_window" />
            <field name="parent_id" ref="maintenance.menu_equipment_form" />
        </record> -->
        <menuitem
        id="hit__menu_equipment"
        name="Equipment" 
        parent="maintenance.menu_equipment_form"
        action="maintenance.hr_equipment_action"
        />
        <menuitem
        id="hit_condition_monitoring_menu_maintenance_req"
        name="Equipment Master List" 
        parent="maintenance.menu_equipment_form"
        action="action_hit_condition_monitoring_act_window"
        />

        <menuitem
        id="service_type_maintenance"
        name="Service Type" 
        parent="maintenance.menu_equipment_form"
        action="action_service_type_act_window"
        />

        <menuitem
        id="measuring_reading_maintenance"
        name="Measuring Reading" 
        parent="maintenance.menu_equipment_form"
        action="action_measuring_reading_act_window"
        />
    </data>
</odoo>